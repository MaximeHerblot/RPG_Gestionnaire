{% extends 'base.html.twig' %}

{% block title %}Création personnage
{% endblock %}

{% block body %}
	<form action={{ path('app_creation_personnage_request')}} method="POST">

		<label for="nom_personnage">Nom du personnage :</label>
		<input type="text" id="nom_personnage" name="nom_personnage" required>

		<div class="tableau-carac">
			<div class="carac">
				<label for="carac_force">Force :</label>
				<input type="number" id="carac_force" name="carac_force" required value="10" min="6" max="30">
			</div>
			<div class="carac">
				<label for="carac_dexterite">Dexterité:</label>
				<input type="number" id="carac_dexterite" name="carac_dexterite" required value="10" min="6" max="30">
			</div>
			<div class="carac">
				<label for="carac_constitution">Constitution:</label>
				<input type="number" id="carac_constitution" name="carac_constitution" required value="10" min="6" max="30">
			</div>
			<div class="carac">
				<label for="carac_intelligence">Intelligence:</label>
				<input type="number" id="carac_intelligence" name="carac_intelligence" required value="10" min="6" max="30">
			</div>
			<div class="carac">
				<label for="carac_sagesse">Sagesse:</label>
				<input type="number" id="carac_sagesse" name="carac_sagesse" required value="10" min="6" max="30">
			</div>
			<div class="carac">
				<label for="carac_charisme">Charisme:</label>
				<input type="number" id="carac_charisme" name="carac_charisme" required value="10" min="6" max="30">
			</div>
		</div>


		<input type="submit" value="Enregistrement du personnage">
	</form>
{% endblock %}
